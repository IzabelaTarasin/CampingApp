@code {
    [Parameter]
    public int ReservationId { get; set; }

    private string title = "CampApp";

    private ReservationModel myReservation;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            myReservation = await ReservationService.GetReservationById(ReservationId);
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

    private async Task HandleCancelButtonClick()
    {
        try
        {
            Console.WriteLine("Anulowano rezerwacje");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

    private async Task HandlePdfButtonClick()
    {
        try
        {
            var pdfBytes = await ReservationService.GetReservationPdfById(myReservation.Id);
            await JSRuntime.InvokeVoidAsync(
            "downloadFromByteArray",
            new
            {
                ByteArray = pdfBytes,
                FileName = $"confirmation-{myReservation.Id}.pdf",
                ContentType = "application/pdf"
            });

        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
}

