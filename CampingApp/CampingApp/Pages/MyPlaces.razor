@page "/myplaces"
@using CampingApp.Services;
@using CampingApp.Domain;
@inject IPlaceService placeService;
@inject NavigationManager NavigationManager;
@inject NavigationManager navigationManager;

<PageTitle>@title</PageTitle>

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Twoje obiekty</h1>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var place in Places)
            {
                <div class="col-4 mb-5">
                    <a class="pizza-img" asp-area="" asp-page="Detail">
                        <img src="@place.ImageToDisplay()" class="w-100" asp-append-version="true" />
                    </a>
                    <br />
                    <p class="nameText">@place.Name</p>
                    @*<p class="smallTextOwn">@place.Description</p>*@
                    <p class="smallTextOwn"> woj. @place.Address.Voivodeship</p>
                    <p class="smallTextOwn">@place.PricePerDay zł / doba za osobę</p>
                    @*<button class="own-button" type="submit">Usuń obiekt</button>*@
                    @*<button class="own-button" type="submit">Edytuj obiekt</button>*@
                    <br />
                    <div class="space-own-add-new-object">
                        <button class="btn btn-primary mt-1" type="submit" @onclick="@(() => NavigateToDetails(place))">Przeglądaj</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@code {
    private string title = "CampApp";

    List<PlaceModel> Places = new List<PlaceModel>();

    protected override async Task OnInitializedAsync() //odpali sie gdy pierwszy raz odpali widok
    {
        var uri = navigationManager.ToAbsoluteUri(navigationManager.Uri);

        //chcemy od razu zaladowac z bazy danych liste miec i dzieki temu ze ta metoda oninit uruch sie od razu to tak bedzie
        try
        {
            Places = await placeService.GetMyPlaces();

        }
        catch (Exception ex)
        {
            Console.WriteLine("Error: " + ex);
        }
    }

    private void NavigateToDetails(PlaceModel placeModel)
    {
        navigationManager.NavigateTo($"detail/{placeModel.Id}");
    }


}

